<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LayoutCorpoFora">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/app_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="LayoutCorpoDentro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/borda_1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BotaoDash">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TituloTela">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_large</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#FF8C00</item>
    </style>


</resources>
