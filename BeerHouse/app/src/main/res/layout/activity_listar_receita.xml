<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutCorpoFora"
    tools:context="beerhouse.lucas.mobile.pucminas.com.beerhouse.ListarReceitaActivity">

    <LinearLayout style="@style/LayoutCorpoDentro">

        <TextView android:text="@string/lbl_listar_receita_titulo"
            style="@style/TituloTela"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ListView
                android:id="@+id/lst_receitas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7.91" >
            </ListView>

        </ScrollView>

    </LinearLayout>

</LinearLayout>