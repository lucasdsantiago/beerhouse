<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:padding="@dimen/padding_large"
    tools:context="beerhouse.lucas.mobile.pucminas.com.beerhouse.ListarReceitaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/borda_1"
        android:orientation="vertical">

        <TextView android:text="@string/lbl_listar_receita_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_large"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="#FF8C00"/>

        <ListView
            android:id="@+id/lst_receitas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7.91" >
        </ListView>

    </LinearLayout>

</LinearLayout>
